@model UpdateTestimonialDto
@{
    ViewData["Title"] = "UpdateTestimonial";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<form method="post">
    <input type="hidden" asp-for="TestimonialID" />
    <div class="form-group row">
        <label class="col-lg-4 col-form-label" for="val-username">
            Referans Adı <span class="text-danger">*</span>
        </label>
        <div class="col-lg-6">
            <input type="text" class="form-control input-rounded" asp-for="Name" placeholder="Referans adını giriniz..">
            <span asp-validation-for="Name" class="text-danger"></span>

        </div>
    </div>
    <div class="form-group row">
        <label class="col-lg-4 col-form-label">
            Referans Ünvanı <span class="text-danger">*</span>
        </label>
        <div class="col-lg-6">
            <input type="text" class="form-control input-rounded" asp-for="Title" placeholder="Referans ünvanı giriniz..">
            <span asp-validation-for="Title" class="text-danger"></span>

        </div>
    </div>
    <div class="form-group row">
        <label class="col-lg-4 col-form-label">
            Referans Açıklama <span class="text-danger">*</span>
        </label>
        <div class="col-lg-6">
            <input type="text" class="form-control input-rounded" asp-for="Description" placeholder="Açıklama..">
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-lg-4 col-form-label">
            Referans Görsel <span class="text-danger">*</span>
        </label>
        <div class="col-lg-6">
            <input type="text" class="form-control input-rounded" asp-for="Image" placeholder="Görsel..">
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>
    </div>
    <div class="d-flex justify-content-end">
        <button class="btn mb-1 btn-rounded btn-success">Referans Güncelle</button>
    </div>

</form>


