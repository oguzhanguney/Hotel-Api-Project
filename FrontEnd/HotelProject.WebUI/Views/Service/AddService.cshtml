@model CreatServiceDto
@{
    ViewData["Title"] = "AddService";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<form method="post">
    <div class="form-group row">
        <label class="col-lg-4 col-form-label" for="val-username">
            Hizmet İkonu<span class="text-danger">*</span>
        </label>
        <div class="col-lg-6">
            <input type="text" class="form-control input-rounded" asp-for="ServiceIcon" >
            <span asp-validation-for="ServiceIcon" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-lg-4 col-form-label">
            Hizmet Başlığı<span class="text-danger">*</span>
        </label>
        <div class="col-lg-6">
            <input type="text" class="form-control input-rounded" asp-for="Title" >
            <span asp-validation-for="Title" class="text-danger"></span>

        </div>
    </div>
    <div class="form-group row">
        <label class="col-lg-4 col-form-label">
            Hizmet Açıklama <span class="text-danger">*</span>
        </label>
        <div class="col-lg-6">
            <input type="text" class="form-control input-rounded" asp-for="Description" >
            <span asp-validation-for="Description" class="text-danger"></span>

        </div>
    </div>
    <div class="d-flex justify-content-end">
        <button class="btn mb-1 btn-rounded btn-success">Hizmet Ekle</button>
    </div>

</form>

