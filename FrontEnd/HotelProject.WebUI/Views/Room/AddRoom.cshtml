@model CreateRoomDto
@{
    ViewData["Title"] = "AddRoom";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<form method="post">
    <div class="form-group row">
        <label class="col-lg-5 col-form-label" for="val-username">
            Oda Numarası <span class="text-danger">*</span>
        </label>
        <div class="col-lg-6">
            <input type="text" class="form-control input-rounded" asp-for="RoomNumber" placeholder="Oda numarası giriniz..">
            <span asp-validation-for="RoomNumber" class="text-danger"></span>

        </div>
    </div>
    <div class="form-group row">
        <label class="col-lg-5 col-form-label">
            Oda Görseli <span class="text-danger">*</span>
        </label>
        <div class="col-lg-6">
            <input type="text" class="form-control input-rounded" asp-for="RoomCoverImg" placeholder="Oda görseli giriniz..">
            <span asp-validation-for="RoomCoverImg" class="text-danger"></span>

        </div>
    </div>
    <div class="form-group row">
        <label class="col-lg-5 col-form-label">
            Oda Fiyat <span class="text-danger">*</span>
        </label>
        <div class="col-lg-6">
            <input type="text" class="form-control input-rounded" asp-for="Price" placeholder="Fiyat - ₺">
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-lg-5 col-form-label">
            Oda Başlık <span class="text-danger">*</span>
        </label>
        <div class="col-lg-6">
            <input type="text" class="form-control input-rounded" asp-for="Title" placeholder="Oda başlığı giriniz..">
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-lg-5 col-form-label">
            Yatak Sayısı <span class="text-danger">*</span>
        </label>
        <div class="col-lg-6">
            <input type="text" class="form-control input-rounded" asp-for="BedCount" placeholder="Yatak sayısı giriniz..">
            <span asp-validation-for="BedCount" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-lg-5 col-form-label">
            Banyo Sayısı <span class="text-danger">*</span>
        </label>
        <div class="col-lg-6">
            <input type="text" class="form-control input-rounded" asp-for="BathCount" placeholder="Banyo sayısı giriniz..">
            <span asp-validation-for="BathCount" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-lg-5 col-form-label">
            Wifi <span class="text-danger">*</span>
        </label>
        <div class="col-lg-6">
            <input type="text" class="form-control input-rounded" asp-for="Wifi" placeholder="Wifi bilgisi giriniz..">
            <span asp-validation-for="Wifi" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-lg-5 col-form-label">
            Oda Açıklama <span class="text-danger">*</span>
        </label>
        <div class="col-lg-6">
            <input type="text" class="form-control input-rounded" asp-for="Description" placeholder="Açıklama giriniz..">
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>

    <div class="d-flex justify-content-end">
        <button class="btn mb-1 btn-rounded btn-success">Oda Ekle</button>
    </div>

</form>

