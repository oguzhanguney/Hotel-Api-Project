@model List<ResultServiceDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<table class="table table-bordered table-striped verticle-middle">
    <tr>
        <th>#</th>
        <th>Hizmet Başlığı</th>
        <th>Güncelle</th>
        <th>Sil</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.ServiceID</th>
            <td>@item.Title</td>
            <td><a href="/Service/UpdateService/@item.ServiceID" class="btn mb-1 btn-success">Güncelle <span class="btn-icon-right"><i class="fa fa-check"></i></span></a></td>
            <td><a href="/Service/DeleteService/@item.ServiceID" class="btn mb-1 btn-danger">Sil <span class="btn-icon-right"><i class="fa fa-close"></i></span></a></td>
        </tr>
    }
</table>
<a href="/Service/AddService/" class="btn btn-info">Yeni Hizmet Girişi</a>

